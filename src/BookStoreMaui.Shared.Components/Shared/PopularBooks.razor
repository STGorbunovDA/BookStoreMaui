
<style>
    .right-box {
        margin-top: 20px;
        box-shadow: 0 0 5px lightgray;
        border-radius: 8px;
    }

    .popular-book-item {
        background-color: white;
        padding: 15px;
        margin-bottom: 5px;
        display: grid;
        grid-template-columns: 100px auto;
        grid-column-gap: 10px;
    }

        .popular-book-item:first-child {
            border-top: 1px solid var(--color-very-light-gray)
        }

        .popular-book-item:last-child {
            margin-bottom: 0;
        }

        .popular-book-item img {
            width: 100px;
            height: 120px;
        }

    .book-title {
        color: black;
        opacity: 0.8;
        font-weight: bold;
        font-size: 20px;
        line-height: 25px;
        margin-bottom: 10px;
    }

    .book-author {
        color: darkgray;
        font-size: 17px;
    }

</style>

<div class="right-box">
    <h3 class="m-0 text-center py-3 bg-white heading">Popular Books</h3>
    <div class="popular-books-list">
        @foreach (var b in PopularBooksList)
        {
            <div class="popular-book-item">
                <a href="/books/@b.Id" title="@b.Title">
                    <img src="@b.Image" alt="@b.Title" class="me-3" />
                </a>
                <div class="d-flex flex-column justify-content-center">
                    <a href="/books/@b.Id" class="book-title" title="@b.Title">@b.Title</a>
                    <a href="/authors/@b.Author.Slug/books" title="Books by @b.Author.Name" class="book-author">
                        by @b.Author.Name
                    </a>
                </div>
            </div>
        }
    </div>
</div>

@code {
    [Parameter, EditorRequired]
    public BookListDto[] PopularBooksList { get; set; } = [];
}