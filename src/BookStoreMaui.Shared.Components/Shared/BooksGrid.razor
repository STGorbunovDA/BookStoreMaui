
<style>
    .book-block {
        margin-bottom: 20px;
    }

        .book-block .image-box {
            margin: 0px;
            overflow: hidden;
            border-radius: 8px;
        }

            .book-block .image-box img {
                width: 100%;
                height: 300px;
                object-fit: cover;
            }

</style>

<div class="row">
    @foreach (var b in Books)
    {
        <div class="book-block col-sm-6 col-lg-3">
            <a href="/books/@b.Id" title="@b.Title">
                <figure class="image-box bg-main-light">
                    <img src="@b.Image" alt="@b.Title" />
                </figure>
                <div class="p-2">
                    <h6 class="text-main heading text-center">@b.Title</h6>
                </div>
            </a>
        </div>
    }
</div>

@code {
    [Parameter, EditorRequired]
    public BookListDto[] Books { get; set; } = [];
}